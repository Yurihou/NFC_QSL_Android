+            //Toast.makeText(this, "OK", Toast.LENGTH_SHORT).show()
+        } else {
+            Toast.makeText(this, "Tag info error!", Toast.LENGTH_SHORT).show()
+        }
+
+        encrypted = intent.getBooleanExtra("encrypted", false);
